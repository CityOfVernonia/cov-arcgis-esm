{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"]
    },
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "types": [
    "cov",
    "js-cookie"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__mocks__",
    "**/*.spec.ts"
  ],
  "files": [
    "src/interfaces.d.ts"
  ]
}
